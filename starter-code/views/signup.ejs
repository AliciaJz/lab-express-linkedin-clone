<h2>Sign up here</h2>

<h3 style="color:tomato"><%=error%></h3>
<form action="/signup" method="POST" id="form-container">
    <input placeholder="Your name" type="text" name="name">
    <input placeholder="Your username" type="text" name="userName">
    <input placeholder="Your email" type="text" name="email">
    <input placeholder="Your password" type="password" name="password">
    <input placeholder="Confirm your password" type="password" name="password2">
  <br><br>
  <button>Create account</button>
</form>


